<UserControl x:Class="QualityGrapher.Views.GetStatistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QualityGrapher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Button Name="GetStatisticsButton"  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row ="0" Content="{DynamicResource GetStatistics}" Click="GetStatisticsButton_OnClick"/>
        <ContentControl Grid.Column="0" Grid.Row="1" x:Name="ListDatasetsControl" />
        <TextBox Name="StatisticsTextBox" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" IsReadOnly="True" TextWrapping="Wrap"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</UserControl>
