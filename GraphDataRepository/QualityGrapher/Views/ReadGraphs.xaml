<UserControl x:Class="QualityGrapher.Views.ReadGraphs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QualityGrapher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl x:Name="ListGraphsControl" Grid.Row="0" />
        <TextBox Name="GraphTriples" Grid.Row="1" IsReadOnly="True" />
        <Button Name="ReadGraphsButton" Grid.Row ="2" Content="{DynamicResource ReadGraphs}" Click="ReadGraphsButton_OnClick" />
    </Grid>
</UserControl>
