<UserControl x:Class="QualityGrapher.Views.DeleteDataset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QualityGrapher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="DeleteDatasetTextBox" Grid.Column="0" Padding="2"  TextAlignment="Center" />
        <Button Name="DeleteDatasetButton" Grid.Column="1" Content="{DynamicResource DeleteDataset}" Click="DeleteDatasetButton_OnClick" />
    </Grid>
</UserControl>