<UserControl x:Class="QualityGrapher.Views.RevertToCommitPoint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QualityGrapher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" x:Name="ListCommitPointsControl" />
        
        <Button Name="RevertButton" Grid.Row ="1"
                Content="{DynamicResource RevertToCommitPoint}" Click="RevertButton_OnClick"/>
    </Grid>
</UserControl>
